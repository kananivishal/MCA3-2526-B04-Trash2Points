<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When EditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_8sdp"/>
            <stroke android:width="@dimen/_1sdp" android:color="@color/primaryColor"/> <!-- Blue border when focused -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_8sdp"/>
            <stroke android:width="@dimen/_1sdp" android:color="@color/stroke_color"/> <!-- Default border -->
        </shape>
    </item>
</selector>
