<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".fragment.HomeFragment">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_20sdp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/profile_img"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:text="Hii , Mr Lee"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp" />

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/person_2"
                app:tint="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <!-- MAIN CONTENT -->

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginTop="@dimen/_30sdp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:background="@drawable/shape_home_bg"
                android:orientation="vertical">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_20sdp">

                        <!-- STATUS CARDS -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Rejected -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/light_blue"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"

                                    android:padding="12dp">

                                    <TextView
                                        android:id="@+id/rejected_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_bold"
                                        android:gravity="center"
                                        android:text="110"
                                        android:textColor="@color/black"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Rejected"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />

                                    <com.google.android.material.progressindicator.LinearProgressIndicator
                                        android:id="@+id/progressRejected"
                                        style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                                        android:layout_width="match_parent"
                                        android:layout_height="8dp"
                                        android:layout_marginTop="6dp"
                                        android:progress="0"
                                        app:indicatorColor="@color/blue_progress"
                                        app:trackColor="@color/gray_light"
                                        app:trackCornerRadius="@dimen/_5sdp"
                                        app:trackThickness="8dp" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Completed -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/light_green"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="12dp">

                                    <TextView
                                        android:id="@+id/completed_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_bold"
                                        android:gravity="center"
                                        android:text="110"
                                        android:textColor="@color/black"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Completed"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />

                                    <com.google.android.material.progressindicator.LinearProgressIndicator
                                        android:id="@+id/progressCompleted"
                                        style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                                        android:layout_width="match_parent"
                                        android:layout_height="8dp"
                                        android:layout_marginTop="6dp"
                                        android:progress="0"
                                        app:indicatorColor="@color/green_progress"
                                        app:trackColor="@color/gray_light"
                                        app:trackCornerRadius="@dimen/_5sdp"
                                        app:trackThickness="8dp" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Pending -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/light_red"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="12dp">

                                    <TextView
                                        android:id="@+id/pending_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_bold"
                                        android:gravity="center"
                                        android:text="110"
                                        android:textColor="@color/black"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Pending"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />

                                    <com.google.android.material.progressindicator.LinearProgressIndicator
                                        android:id="@+id/progressPending"
                                        style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                                        android:layout_width="match_parent"
                                        android:layout_height="8dp"
                                        android:layout_marginTop="6dp"
                                        android:progress="0"
                                        app:indicatorColor="@color/red_progress"
                                        app:trackColor="@color/gray_light"
                                        app:trackCornerRadius="@dimen/_5sdp"
                                        app:trackThickness="8dp" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <!-- RECENT REPORTS -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:includeFontPadding="false"
                                android:text="Recently Reports"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14ssp" />


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_20sdp"
                                tools:itemCount="5"
                                tools:listitem="@layout/item_garbage_report" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- LOTTIE LOADER -->
    <RelativeLayout
        android:id="@+id/lottieAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transperent2"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading" />
    </RelativeLayout>
</RelativeLayout>
